---
    import { Image } from "astro:assets";
    import socialIcon from "/src/assets/icons/persons-socialIcon.svg";
    import linkedinIcon from "/src/assets/icons/linkedin-icon.svg";
    import githubIcon from "/src/assets/icons/github-icon.svg";
    import whatsappIcon from "/src/assets/icons/whatsapp-icon.svg";
---

<article class="socialSection">
    <div class="socialContainer flex">
        <Image id="socialIcon" src={socialIcon} alt="Icono de redes sociales" width={30} />
        <a class="whatsapp expand" href="https://wa.me/+5492342463886" target="_blank">
            <Image id="whatsappIcon" src={whatsappIcon} alt="Icono de linkedin" width={30} />
        </a>
        <a class="github expand" href="https://github.com/BenjaminFisico" target="_blank">
            <Image id="githubIcon" src={githubIcon} alt="Icono de linkedin" width={30} />
        </a>
        <a class="linkedin" href="https://www.linkedin.com/in/benjamin-fisico/" target="_blank">
            <Image id="linkedinIcon" src={linkedinIcon} alt="Icono de linkedin" width={30} />
        </a>
    </div>
</article>

<style>
    .socialSection{
        position: fixed;
        bottom: 0;
        overflow: hidden;
        height: 120px;
        width: 100px;
    }
    
    .socialContainer{
        background-color: #3f3f3f75;
        backdrop-filter: blur(5px);
        width: 300px;
        height: 300px;
        border-radius: 50%;
        position: absolute;
        bottom: -245px;
        left: -195px;
        overflow:hidden;
        transition: transform 0.5s ease;
    }

    .socialContainer:hover{
        transform: translateX(55px) translateY(-80px);
    }

    .flex{
        display: flex;
        justify-content: center;
        align-items: center;
    }

    #socialIcon{
        position: absolute;
        left: 200px;
        top: 25px;
        z-index: 0;
    }

    .linkedin, .github, .whatsapp{
        position:absolute;
        border-radius: 50%;
        transition: width 0.5s ease, height 0.5s ease;
    }

    .linkedin{
        width: 225px;
        height: 225px;
        background-color: blue;
        z-index: 1;
    }

    .linkedin:hover{
        width: 300px;
        height: 300px;
    }

    #linkedinIcon{
        position: relative;
        left: 145px;
        top: 15px;
        z-index: 1;
        transition: all 0.5s ease;
    }

    .linkedin:hover #linkedinIcon{
        left: 185px;
        top: 40px;
    }

    .github{
        width: 160px;
        height: 160px;
        background-color: #1E1E1E;
        z-index: 2;
    }

    #githubIcon{
        position: relative;
        left: 90px;
        top: 15px;
        transition: all 0.5s ease;
    }

    .github:hover #githubIcon{
        left: 160px;
        top: 40px;
    }

    .whatsapp{
        width: 80px;
        height: 80px;
        background-color: #008F1E;
        z-index: 3;
    }

    #whatsappIcon{
        position: relative;
        left: 30px;
        top: 5px;
        transition: all 0.5s ease;
    }

    .whatsapp:hover #whatsappIcon{
        left: 160px;
        top: 40px;
    }

    .expand:hover{
        width: 260px;
        height: 260px;
    }

    .expand:hover + a{
        width: 300px;
        height: 300px;
    }
    

</style>