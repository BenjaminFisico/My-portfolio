---
import Image from "astro/components/Image.astro";
import instagramIcon from '/src/assets/icons/instagram_circle_icon.svg';
import textLogo from '/src/assets/icons/instagramTextLogo.webp';
import profilePhoto from '/src/assets/icons/profileInstagramPhoto.jpg';
---

<div class="instagramHoverRegion">
    <Image class="instagramIcon" src={instagramIcon} alt="Instagram icon"/>
    <div class="instagramBorderWrapper">
        <div class="instagramContainer">
            <Image class="instagramTextLogo" src={textLogo} alt="Instagram text logo" width={125}/>
            <div class="photoWrapper">
                <Image class="instagramPhoto" src={profilePhoto} alt="instagram profile image"/>
            </div>
            <h3>@Top.mejores.web</h3>
            <a href="https://www.instagram.com/top.mejores.web/" target="_blank" class="instagramButton">Seguir</a>
        </div>
    </div>
</div>

<style>
    .instagramHoverRegion{
        display: flex;
        flex-direction: column;
        justify-content: center;
        width: 100%;
        height: 150px;
        margin-top: 100px;
        margin-bottom: 100px;
    }

    .instagramHoverRegion:hover .instagramContainer{
        animation: expand 0.5s ease 1s 1 normal forwards;
    }

    .instagramHoverRegion:hover .instagramBorderWrapper{
        animation: paddingApear 0.5s ease 0.5s 1 normal forwards;
    }

    .instagramHoverRegion:hover .instagramIcon{
        animation: iconDisolve 1s ease 0s 1 normal forwards;
    }

    .instagramIcon{
        position: relative;
        width: 96px;
        height: 96px;
        margin-left: auto;
        margin-right: auto;
        margin-bottom: 100px;
        -webkit-animation: heartbeat 1.5s ease-in-out infinite both;
        animation: heartbeat 1.5s ease-in-out infinite both;
    }

    @keyframes iconDisolve {
        0%{transform: scale(1);}
        10%{transform: scale(1.2);}
        20%{transform: scale(1.3);}
        100%{transform: scale(0);}
    }

    .instagramBorderWrapper{
        width: 225px;
        height: max-content;
        padding: 0px;
        border-radius: 15px;
        background: -moz-linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%); 
        background: -webkit-linear-gradient(45deg, #f09433 0%,#e6683c 25%,#dc2743 50%,#cc2366 75%,#bc1888 100%); 
        background: linear-gradient(45deg, #f09433 0%,#e6683c 25%,#dc2743 50%,#cc2366 75%,#bc1888 100%);
        margin-left: auto;
        margin-right: auto;
        margin-top: -155px;
    }

    @keyframes paddingApear {
        from{ padding: 0px;}
        to{ padding: 5px;}
    }

    .instagramContainer{
        display: flex; 
        flex-direction: column;
        align-items: center;
        background: #fff; 
        border-radius: 10px;
        gap: 5px;
        overflow: hidden;
        height: 0;
    }

    @keyframes expand {
        from{ height: 0; padding: 0px;}
        to{ height: 250px; padding: 16px 8px;}
    }

    .instagramContainer h3{
        font-size: 1.2rem;
    }

    .instagramTextLogo{
        opacity: 0;
        margin-bottom: 16px;
    }

    .instagramHoverRegion:hover .instagramBorderWrapper .instagramContainer .instagramTextLogo{
        animation: fade-in 300ms ease 1.2s 1 normal forwards;
    }

    @keyframes fade-in {
        from{ opacity: 0;}
        to{ opacity: 1;}
    }

    .instagramContainer a{
        transform: scaleX(0);
    }

    .instagramHoverRegion:hover .instagramBorderWrapper .instagramContainer a{
        animation: scaleXappears 300ms ease 1.2s 1 normal forwards;
    }

    @keyframes scaleXappears  {
        from{ transform: scaleX(0);}
        to{ transform: scaleX(1);}
    }

    .photoWrapper{
        display: flex;
        justify-content: center;
        border-radius: 50%;
        padding: 4px;
        width: 79px;
        background: -moz-linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%); 
        background: -webkit-linear-gradient(45deg, #f09433 0%,#e6683c 25%,#dc2743 50%,#cc2366 75%,#bc1888 100%); 
        background: linear-gradient(45deg, #f09433 0%,#e6683c 25%,#dc2743 50%,#cc2366 75%,#bc1888 100%);
    }

    .instagramHoverRegion:hover .instagramBorderWrapper .instagramContainer .photoWrapper::before{
        animation: scaleXappears 400ms ease 1.1s 1 reverse forwards, fade-in 100ms ease 1.2s 1 normal forwards;
    }

    .photoWrapper::before{
        position: absolute;
        content: '';
        width: 85px;
        height: 85px;
        border-radius: 50%;
        margin-left: 8px;
        margin-top: 8px;
        background-color: #fff;
        z-index: 0;
        opacity: 0;
    }

    .instagramPhoto{
        border-radius: 100%;
        border: 3px solid #fff;
        width: 75px;
        height: 75px;
        z-index: 1;
    }

    .instagramButton{
        background: rgb(0, 149, 246);
        border-radius: 5px;
        color: #fff;
        font-family: "sans-serif";
        font-size: 1.1rem;
        text-decoration: none;
        text-align: center;
        padding: 5px;
        width: 85%;
    }

    .instagramButton:hover{
        background: rgb(24, 119, 242);
    }

    @-webkit-keyframes heartbeat {
    from {
        -webkit-transform: scale(1);
                transform: scale(1);
        -webkit-transform-origin: center center;
                transform-origin: center center;
        -webkit-animation-timing-function: ease-out;
                animation-timing-function: ease-out;
    }
    10% {
        -webkit-transform: scale(0.91);
                transform: scale(0.91);
        -webkit-animation-timing-function: ease-in;
                animation-timing-function: ease-in;
    }
    17% {
        -webkit-transform: scale(0.98);
                transform: scale(0.98);
        -webkit-animation-timing-function: ease-out;
                animation-timing-function: ease-out;
    }
    33% {
        -webkit-transform: scale(0.87);
                transform: scale(0.87);
        -webkit-animation-timing-function: ease-in;
                animation-timing-function: ease-in;
    }
    45% {
        -webkit-transform: scale(1);
                transform: scale(1);
        -webkit-animation-timing-function: ease-out;
                animation-timing-function: ease-out;
    }
    }

    @keyframes heartbeat {
    from {
        -webkit-transform: scale(1);
                transform: scale(1);
        -webkit-transform-origin: center center;
                transform-origin: center center;
        -webkit-animation-timing-function: ease-out;
                animation-timing-function: ease-out;
    }
    10% {
        -webkit-transform: scale(0.91);
                transform: scale(0.91);
        -webkit-animation-timing-function: ease-in;
                animation-timing-function: ease-in;
    }
    17% {
        -webkit-transform: scale(0.98);
                transform: scale(0.98);
        -webkit-animation-timing-function: ease-out;
                animation-timing-function: ease-out;
    }
    33% {
        -webkit-transform: scale(0.87);
                transform: scale(0.87);
        -webkit-animation-timing-function: ease-in;
                animation-timing-function: ease-in;
    }
    45% {
        -webkit-transform: scale(1);
                transform: scale(1);
        -webkit-animation-timing-function: ease-out;
                animation-timing-function: ease-out;
    }
    }


</style>

