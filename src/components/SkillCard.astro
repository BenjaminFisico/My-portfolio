---
import { Image } from 'astro:assets';

interface Props {
    title: string;
    desc: string;
    image: ImageMetadata;
}

const { title, desc, image } = Astro.props;
---

<article class="skillCard">
    <div class="iconContainer">
        <Image src={image} alt={title} width={50} loading="lazy"/>
    </div>
    <div class="textContainer">
        <h3>{title}</h3>
        <p>{desc}</p>
    </div>
</article>

<style>
    .skillCard{
        display: flex;
        justify-content: flex-start;
        border-radius: 20px;
        background-color: #92a0a9;
        margin-top: 8px;
        width: 75%;
        animation: animationForItem linear;
        animation-timeline: view();
    }

    @keyframes animationForItem {
        0%{
            transform: scaleX(1) scaleY(1) scaleZ(1) rotateX(-90deg) rotateY(0deg) rotateZ(0deg) translateX(0px) translateY(0) translateZ(-140px) skewX(0deg) skewY(0deg);
        }
        40% , 50%{
            transform: scaleX(1) scaleY(1) scaleZ(1) rotateX(0deg) rotateY(0deg) rotateZ(0deg) translateX(0px) translateY(0) translateZ(0) skewX(0deg) skewY(0deg);
        }
        55%{
            transform: scaleX(1) scaleY(1) scaleZ(1) rotateX(10deg) rotateY(0deg) rotateZ(0deg) translateX(0px) translateY(0) translateZ(-24px) skewX(0deg) skewY(0deg);
        }
        60%{
            transform: scaleX(1) scaleY(1) scaleZ(1) rotateX(20deg) rotateY(0deg) rotateZ(0deg) translateX(0px) translateY(0) translateZ(-41px) skewX(0deg) skewY(0deg);
        }
        65%{
            transform: scaleX(1) scaleY(1) scaleZ(1) rotateX(30deg) rotateY(0deg) rotateZ(0deg) translateX(0px) translateY(0) translateZ(-58px) skewX(0deg) skewY(0deg);
        }
        70%{
            transform: scaleX(1) scaleY(1) scaleZ(1) rotateX(40deg) rotateY(0deg) rotateZ(0deg) translateX(0px) translateY(0) translateZ(-75px) skewX(0deg) skewY(0deg);
        }
        75%{
            transform: scaleX(1) scaleY(1) scaleZ(1) rotateX(50deg) rotateY(0deg) rotateZ(0deg) translateX(0px) translateY(0) translateZ(-92px) skewX(0deg) skewY(0deg);
        }
        80%{
            transform: scaleX(1) scaleY(1) scaleZ(1) rotateX(60deg) rotateY(0deg) rotateZ(0deg) translateX(0px) translateY(0) translateZ(-109px) skewX(0deg) skewY(0deg);
        }
        85%{
            transform: scaleX(1) scaleY(1) scaleZ(1) rotateX(70deg) rotateY(0deg) rotateZ(0deg) translateX(0px) translateY(0) translateZ(-126px) skewX(0deg) skewY(0deg);
        }
        90%{
            transform: scaleX(1) scaleY(1) scaleZ(1) rotateX(80deg) rotateY(0deg) rotateZ(0deg) translateX(0px) translateY(0) translateZ(-143px) skewX(0deg) skewY(0deg);
        }
        95%{
            transform: scaleX(1) scaleY(1) scaleZ(1) rotateX(90deg) rotateY(0deg) rotateZ(0deg) translateX(0px) translateY(0) translateZ(-160px) skewX(0deg) skewY(0deg);
            opacity: 1;
        }
        100%{
            transform: scaleX(1) scaleY(1) scaleZ(1) rotateX(90deg) rotateY(0deg) rotateZ(0deg) translateX(0px) translateY(0) translateZ(-160px) skewX(0deg) skewY(0deg);
            opacity: 0;
        }
    }

    .skillCard::after{
        content: '';
        border-radius: 20px;
        position: absolute;
        width: 100%;
        height: 100%;
        background-color: black;
        animation: blackAparition linear;
        animation-timeline: view();
    }

    @keyframes blackAparition {
        0%{
            opacity: 1;
        }
        40%{
            opacity: 0;
        }
        50%{
            opacity: 0;
        }
        100%{
            opacity: 1;
        }

    }

    .iconContainer{
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
        background-color: #1E1E1E;
        border-radius: 20px 0px 0px 20px;
    }

    .textContainer{
        text-align: center;
        width: -webkit-fill-available;
    }

    .textContainer p{
        margin-left: 16px;
    }
</style>