---
interface Props {
    color: string;
    direction?: string;
}

const { color, direction = '1' } = Astro.props;
---

<div class="finalSection" style=`transform: scaleX(${direction}); margin-top: -1px`>
    <svg viewBox="0 0 480 100" xmlns="http://www.w3.org/2000/svg">
        <polygon points="0,0 480,0 0,100" fill={color}/>
    </svg>
</div>
