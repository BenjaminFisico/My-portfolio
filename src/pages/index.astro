		<script>
			const arrayOfClodus = document.getElementsByClassName('cloud');
			for(let i=0; i < arrayOfClodus.length; i++){
				let cloud = arrayOfClodus[i] as HTMLElement;
				randomCloud(cloud, 5);
			}

			function randomCloud(cloud: HTMLElement, maxDuration: number = 20) {
				let animationduration = Math.floor(Math.random() * 20) + 20;
				cloud.style.top = Math.floor(Math.random() * 400) + 'px';
				cloud.style.transition = `left ${animationduration}s linear`;
				if(cloud.classList.value.includes('cloudAnimation')){
					cloud.classList.remove('cloudAnimation');
				} else {
					cloud.classList.add('cloudAnimation');
				}
				setTimeout(() => {
					randomCloud(cloud);
				}, animationduration * 1000);
			}
		</script>

	</main>
